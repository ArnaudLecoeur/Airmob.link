{
	"assets": {
		"src": "src/assets/**/*",
		"dest": "assets"
	},
	"buildDir": "dist",
	"deploy": {
		"github": {
			"owner": "SimonTernoir",
			"repository": "Static-site-starter-kit",
			"cacheDir": ".publish"
		}
	},
	"handlebars": {
		"context": "src/templates/context.js",
		"src": ["src/templates/views/**/*.hbs"],
		"partials": "src/templates/partials",
		"dest": "."
	},
	"images": {
		"src": "src/images/**",
		"dest": "images"
	},
	"js": {
		"src": [
				"src/js/**/*.js"
		],
		"name": "all.min.js",
		"dest": "js"
	},
	"scss": {
		"includePaths": "",
		"all": "src/scss/**/*.scss",
		"main": "src/scss/main.scss",
		"name": "all.min.css",
		"dest": "css"
	}
}
